<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Ferreteria</title>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">ColiMateriales</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a href="/employes" class="nav-link active" aria-current="page" href="#">Empleados</a>
              </li>
              <li class="nav-item">
                <a href="/storage" class="nav-link active" href="#">Inventario</a>
              </li>
              <li class="nav-item">
                <a href="/supplier" class="nav-link active" href="#">Proveedores</a>
              </li>
              <li class="nav-item">
                <a href="/services" class="nav-link active" href="#">Servicios </a>
              </li>
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>

    <div class="container">
        <h1 class="mt-4">Proveedores</h1>
        <a href="/supplier/add" class="btn btn-success">Agregar</a>
        <a href="/" class="btn btn-warning">Crear nota</a><br>
        <table class="table table-striped text-center mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">ID</th>
                    <th scope="col">NOMBRE</th>
                    <th scope="col">FOLIO</th>
                    <th scope="col">MARCA</th>
                    <th scope="col">EMAIL</th>
                    <th scope="col">TELEFONO</th>
                    <th scope="col">ACCIONES</th>
                </tr>
                <tbody>
                    <% results.filter((supplier) =>
                      supplier.nombre.includes('')
                    ).forEach((supplier)=> { %>
                    <tr>
                        <td><%= supplier.id %></td>
                        <td><%= supplier.nombre %></td>
                        <td><%= supplier.folio %></td>
                        <td><%= supplier.marca %></td>
                        <td><%= supplier.email %></td>
                        <td><%= supplier.telefono %></td>
                        <td>
                            <a href="/supplier/update/<%= supplier.id %>" class="btn btn-outline-info">editar</a>
                            <a href="/supplier/delete/<%= supplier.id %>" class="btn btn-outline-danger">eliminar</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </thead>
        </table>
    </div>

 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

   
  </body>
</html>